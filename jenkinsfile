// Jenkinsfile â€” Buildah + Python
// - íƒœê·¸ ì •ì±…: ìˆœìˆ˜ semver(X.Y.Z) + latest
// - ì˜µì…˜: PUSH_IMMUTABLE=true ë¡œ ë‘ë©´ X.Y.Z-<sha>ë„ í•¨ê»˜ í‘¸ì‹œ
// - Argo CD Image UpdaterëŠ” allow-tags=regexp:^\\d+\\.\\d+\\.\\d+$ ì™€ ì°°ë–¡ê¶í•©

pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins: "agent"
spec:
  restartPolicy: Never
  nodeSelector:
    kubernetes.io/os: linux
  securityContext:
    runAsUser: 0
  volumes:
    - name: workspace-volume
      emptyDir: {}
  containers:
    - name: buildah
      image: quay.io/buildah/stable:v1.34.0
      securityContext:
        privileged: true
      env:
        - name: STORAGE_DRIVER
          value: vfs
        - name: BUILDAH_ISOLATION
          value: chroot
      command: ['cat']
      tty: true
      volumeMounts:
        - name: workspace-volume
          mountPath: /home/jenkins/agent

    - name: python
      image: python:3.11-slim
      command: ['cat']
      tty: true
      volumeMounts:
        - name: workspace-volume
          mountPath: /home/jenkins/agent

    - name: git
      image: alpine/git:2.45.2
      command: ['cat']
      tty: true
      volumeMounts:
        - name: workspace-volume
          mountPath: /home/jenkins/agent

    - name: jnlp
      image: jenkins/inbound-agent:3327.v868139a_d00e0-6
      env:
        - name: JENKINS_AGENT_WORKDIR
          value: /home/jenkins/agent
      volumeMounts:
        - name: workspace-volume
          mountPath: /home/jenkins/agent
'''
    }
  }

  triggers { githubPush() }

  options {
    disableConcurrentBuilds()
    skipDefaultCheckout(true)
    timestamps()
  }

  environment {
    IMAGE_BASE     = 'docker.io/sessaczump/zump-api-amd64'
    REGISTRY       = 'docker.io'
    // ë¶ˆë³€ íƒœê·¸(X.Y.Z-<sha>)ë„ í‘¸ì‹œí•˜ë ¤ë©´ true
    PUSH_IMMUTABLE = 'false'
  }

  stages {
    stage('Checkout') {
      steps {
        // Jenkins SCM í”ŒëŸ¬ê·¸ì¸ìœ¼ë¡œ ì²´í¬ì•„ì›ƒ (íƒœê·¸ ì •ë³´ í¬í•¨)
        checkout(scm)
        // í•„ìš” ì‹œ origin íƒœê·¸ ìµœì‹ í™”
        container('git') {
          sh '''
            set -euxo pipefail
            git fetch --tags --force || true
          '''
        }
      }
    }

    stage('Resolve Version (semver only)') {
      steps {
        container('git') {
          script {
            // ìˆ«ì.ìˆ«ì.ìˆ«ì í˜•íƒœì˜ ìµœì‹  íƒœê·¸ë§Œ ì„ íƒ, ì—†ìœ¼ë©´ 1.0.0
            def ver = sh(
              script: "git describe --tags --match '[0-9]*.[0-9]*.[0-9]*' --abbrev=0 2>/dev/null || echo 1.0.0",
              returnStdout: true
            ).trim()
            // í˜¹ì‹œ vì ‘ë‘ íƒœê·¸ë¥¼ ì“´ë‹¤ë©´ ì œê±° (ì—¬ê¸°ì„  ìˆœìˆ˜ semverë§Œ í—ˆìš©)
            ver = ver.replaceFirst('^v','')

            def sha = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()

            env.VERSION        = ver                      // e.g., 1.0.1
            env.GIT_SHA        = sha                      // e.g., ac83cc4
            env.IMAGE_VERSION  = "${env.IMAGE_BASE}:${env.VERSION}"
            env.IMAGE_LATEST   = "${env.IMAGE_BASE}:latest"
            env.IMAGE_IMMUTABLE= "${env.IMAGE_BASE}:${env.VERSION}-${env.GIT_SHA}" // ì˜µì…˜

            echo "âœ” Resolved Version: ${env.VERSION}, SHA: ${env.GIT_SHA}"
          }
        }
      }
    }

    stage('Python: deps & quick checks') {
      steps {
        container('python') {
          sh '''
            set -euxo pipefail
            python -V
            python -m venv .venv
            . .venv/bin/activate
            pip install --upgrade pip
            if [ -f requirements.txt ]; then pip install -r requirements.txt; fi

            # ê°„ë‹¨ ë¬¸ë²•/êµ¬ì¡° ê²€ì‚¬
            if [ -f main.py ]; then python -m py_compile main.py; fi
            find . -name "*.py" -print0 | xargs -0 -I{} python -m py_compile "{}" || true

            # ì„ íƒì  ë¹Œë“œ ê²€ì¦ í…ŒìŠ¤íŠ¸
            if [ -f tests/test_build_validation.py ]; then python -m pytest tests/test_build_validation.py -v --tb=short; fi
            echo "âœ” Python checks passed"
          '''
        }
      }
    }

    stage('Registry login') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'REG_USERNAME', passwordVariable: 'REG_PASSWORD')]) {
          container('buildah') {
            sh '''
              set -euxo pipefail
              echo "$REG_PASSWORD" | buildah login --username "$REG_USERNAME" --password-stdin docker.io
            '''
          }
        }
      }
    }

    stage('Build image (Buildah)') {
      steps {
        container('buildah') {
          sh '''
            set -euxo pipefail
            buildah version || true
            buildah info || true

            echo "ğŸ”¨ Build ${IMAGE_VERSION}"
            # docker í¬ë§·ìœ¼ë¡œ ë¹Œë“œ(Docker Hub í˜¸í™˜)
            buildah bud --format docker -f Dockerfile -t "${IMAGE_VERSION}" .

            # latest íƒœê·¸ ì¶”ê°€
            buildah tag "${IMAGE_VERSION}" "${IMAGE_LATEST}"

            # (ì˜µì…˜) ë¶ˆë³€ íƒœê·¸ë„ ë¡œì»¬ì— ì¶”ê°€ë§Œ í•´ë‘ 
            if [ "${PUSH_IMMUTABLE}" = "true" ]; then
              buildah tag "${IMAGE_VERSION}" "${IMAGE_IMMUTABLE}"
            fi

            echo "âœ” Built images:"
            buildah images | grep -E "${IMAGE_BASE}" || true
          '''
        }
      }
    }

    stage('Push images') {
      steps {
        container('buildah') {
          sh '''
            set -euxo pipefail
            # ìˆœìˆ˜ semver + latest í‘¸ì‹œ
            for TAG in "${IMAGE_VERSION}" "${IMAGE_LATEST}"; do
              echo "ğŸ“¤ Pushing $TAG"
              buildah push "$TAG"
            done

            # (ì˜µì…˜) ë¶ˆë³€ íƒœê·¸ë„ í‘¸ì‹œ
            if [ "${PUSH_IMMUTABLE}" = "true" ]; then
              echo "ğŸ“¤ Pushing ${IMAGE_IMMUTABLE}"
              buildah push "${IMAGE_IMMUTABLE}"
            fi
          '''
        }
      }
    }
  }

  post {
    success {
      echo 'âœ… ë¹Œë“œ/í‘¸ì‹œ ì„±ê³µ â€” Argo CD Image Updaterê°€ `^\d+\.\d+\.\d+$`ì— ë§ëŠ” ìµœì‹  íƒœê·¸ë¥¼ ê°ì§€í•©ë‹ˆë‹¤.'
    }
    failure {
      echo 'âŒ ë¹Œë“œ ì‹¤íŒ¨ â€” ì½˜ì†” ë¡œê·¸ë¥¼ í™•ì¸í•˜ì„¸ìš”.'
    }
    always {
      container('buildah') {
        sh '''
          set +e
          buildah logout ${REGISTRY} || true
          # ë¡œì»¬ ì´ë¯¸ì§€ ì •ë¦¬(ì„ íƒ)
          buildah rmi -f "${IMAGE_VERSION}" "${IMAGE_LATEST}" "${IMAGE_IMMUTABLE}" 2>/dev/null || true
        '''
      }
      container('python') {
        sh 'rm -rf .venv || true'
      }
    }
  }
}
